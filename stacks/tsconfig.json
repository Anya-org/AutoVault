{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals", "@hirosystems/clarinet-sdk/vitest-helpers/src/vitest"],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@stacks/transactions": ["node_modules/@stacks/transactions/dist/index.d.ts", "node_modules/@stacks/transactions"],
      "@stacks/network": ["node_modules/@stacks/network/dist/index.d.ts", "node_modules/@stacks/network"],
      "@stacks/common": ["node_modules/@stacks/common"],
      "@scure/bip32": ["node_modules/@scure/bip32"],
      "@stacks/transactions/dist/esm/keys": ["node_modules/@stacks/transactions/dist/esm/keys.js"]
    }
  },
  "include": [
    "../scripts/**/*.ts",
    "../scripts/**/*.d.ts",
    "scripts/**/*.d.ts",
    "tests/**/*.ts",
    "tests/vitest.d.ts",
    "sdk-tests/**/*.spec.ts"
  ],
  "exclude": ["node_modules"]
}
