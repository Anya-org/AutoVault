{
  "name": "autovault-stacks-tests",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@hirosystems/clarinet-sdk": "3.5.0",
    "@types/node": "^18.19.0",
    "chokidar-cli": "3.0.0",
    "clarinet": "file:clarinet-wrapper",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:auto": "chokidar 'contracts/**/*.clar' 'tests/**/*.ts' 'sdk-tests/**/*.spec.ts' -c 'npm run check && vitest run'",
    "test:manual": "../scripts/manual-testing.sh",
    "update-autonomics": "ts-node ../scripts/sdk_update_autonomics.ts",
    "int-autonomics": "bash tests/integration_autonomics_sdk.sh",
    "deploy-contracts": "ts-node ../scripts/sdk_deploy_contracts.ts",
    "deploy-testnet": "../scripts/deploy-testnet.sh",
    "verify-post": "ts-node ../scripts/post_deploy_verify.ts",
    "generate-deployer-key": "node -r ts-node/register ../scripts/generate-deployer-key.ts",
    "gen-key": "node generate-deployer-key.js",
    "console": "npx clarinet console",
    "console:testnet": "npx clarinet console --testnet",
    "check": "npx clarinet check",
    "ci": "npm run check && vitest run",
    "pre-deploy": "npm run ci && ../scripts/manual-testing.sh"
  },
  "dependencies": {
    "@scure/bip32": "^1.5.0",
    "@stacks/network": "^7.0.6",
    "@stacks/transactions": "^7.0.6",
    "@types/node-fetch": "^2.6.13",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2"
  }
}
